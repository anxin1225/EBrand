<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:background="@null" android:layout_width="wrap_content" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:layout_width="fill_parent" android:layout_height="45.0dip">
        <TextView
            android:textSize="25.0dip"
            android:textColor="@color/white"
            android:id="@+id/TitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请在此输入桌牌ID(桌牌ID是唯一标识你的身份)"
            android:layout_centerInParent="true" />
    </RelativeLayout>
    <EditText
        android:textSize="30.0dip"
        android:gravity="center_vertical"
        android:id="@+id/myComment"
        android:paddingLeft="5.0dip"
        android:layout_width="500.0dip"
        android:layout_height="50.0dip"
        android:layout_marginLeft="15.0dip"
        android:layout_marginTop="20.0dip"
        android:layout_marginRight="20.0dip"
        android:layout_marginBottom="20.0dip"
        android:digits="0123456789"
        android:inputType="number" />
    <LinearLayout android:gravity="center_horizontal" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="10.0dip">
        <Button
            android:textSize="18.0dip"
            android:textColor="@color/black"
            android:id="@+id/sendBtn"
            android:layout_width="80.0dip"
            android:layout_height="wrap_content"
            android:layout_margin="10.0dip"
            android:text="确定" />
        <Button
            android:textSize="18.0dip"
            android:textColor="@color/black"
            android:id="@+id/cancelBtn"
            android:layout_width="80.0dip"
            android:layout_height="wrap_content"
            android:layout_margin="10.0dip"
            android:layout_marginLeft="50.0dip"
            android:text="取   消"
            android:layout_toRightOf="@id/sendBtn" />
    </LinearLayout>
</LinearLayout>